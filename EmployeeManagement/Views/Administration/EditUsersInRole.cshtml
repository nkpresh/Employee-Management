@model List<UserRoleViewModel>

@{ 
    var RoleId = ViewBag.RoleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for(int i=0; i<Model.Count;i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].UserName" />
                <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-controller="Administration" asp-action="EditRole" asp-route-RoleId="@RoleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>